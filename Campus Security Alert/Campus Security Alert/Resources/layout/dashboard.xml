<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    
>

 
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#f7b707"
            android:alpha="0.5"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/relativeLayout1"
         >
            <TextView
                android:text="Welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/txtCaption"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
            />
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="107.5dp"
                android:layout_height="109.5dp"
                android:id="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
            />
            <TextView
                android:text="User's name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TxtWelcomeNames"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_below="@+id/txtCaption"
            />
             <TextView
                android:text="DateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TxtDateTime"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_below="@+id/TxtWelcomeNames"
            
            />
        </RelativeLayout>
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView1"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="5dp"
            android:layout_above="@+id/textView1"
        >
    
            <GridLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gridLayout1" 
                android:rowCount="3"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
        
            >
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CV_Profile"
                >
                    <LinearLayout android:gravity="center" 
                        android:orientation="vertical" 
                        android:padding="16dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="match_parent"
                    >
                        <ImageView android:id="@+id/imgViewprofile" 
                            android:layout_width="80dp" 
                            android:layout_height="80dp" 
                            android:src="@mipmap/ic_launcher" 
                            android:layout_alignParentRight="true"
                        />
                        <TextView android:textStyle="bold" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="12dp" 
                            android:text="My Profile"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CV_Alerts"
            
                >
                    <LinearLayout android:gravity="center" 
                        android:orientation="vertical" 
                        android:id="@+id/linearProfile" 
                        android:padding="16dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="match_parent"
                    >
                        <ImageView android:id="@+id/imgViewprofile" 
                            android:layout_width="80dp" 
                            android:layout_height="80dp" 
                            android:src="@mipmap/ic_launcher" 
                            android:layout_alignParentRight="true"
                        />
                        <TextView android:textStyle="bold" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="12dp" 
                            android:text="Alert"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CV_StudentsChat"
                
                >
                    <LinearLayout android:gravity="center" 
                        android:orientation="vertical" 
                        android:id="@+id/linearProfile" 
                        android:padding="16dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="match_parent"
                    >
                        <ImageView android:id="@+id/imgViewprofile" 
                            android:layout_width="80dp" 
                            android:layout_height="80dp" 
                            android:src="@mipmap/ic_launcher" 
                            android:layout_alignParentRight="true"
                        />
                        <TextView android:textStyle="bold" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="12dp" 
                            android:text="Students Chat"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CV_About"
                
                >
                    <LinearLayout android:gravity="center" 
                        android:orientation="vertical" 
                        android:id="@+id/linearProfile" 
                        android:padding="16dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="match_parent"
                    >
                        <ImageView android:id="@+id/imgViewprofile" 
                            android:layout_width="80dp" 
                            android:layout_height="80dp" 
                            android:src="@mipmap/ic_launcher" 
                            android:layout_alignParentRight="true"
                        />
                        <TextView android:textStyle="bold" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="12dp"
                            android:text="About Us"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CV_FQA"
                
                >
                    <LinearLayout android:gravity="center" 
                        android:orientation="vertical" 
                        android:id="@+id/linearProfile" 
                        android:padding="16dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="match_parent"
                    >
                        <ImageView android:id="@+id/imgViewprofile" 
                            android:layout_width="80dp" 
                            android:layout_height="80dp" 
                        
                            android:src="@mipmap/ic_launcher" 
                            android:layout_alignParentRight="true"
                        />
                        <TextView android:textStyle="bold" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="12dp" 
                            android:text="T and Cs"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CV_Logout"
                
                >
                    <LinearLayout android:gravity="center" 
                        android:orientation="vertical" 
                        android:id="@+id/linearProfile" 
                        android:padding="16dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="match_parent"
                    >
                        <ImageView
                            android:id="@+id/imgViewprofile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/ic_launcher"
                            android:layout_alignParentRight="true"
                         
                        />
                        <TextView android:textStyle="bold" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="12dp" 
                            android:text="Logout"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
             </GridLayout>
        </ScrollView>
        <TextView
            android:text="Developed by The Code Rpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#000000"
            android:paddingLeft="15dp"
            android:layout_alignParentBottom="true"
        />
      
</RelativeLayout>